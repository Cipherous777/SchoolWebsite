<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin • All Registrations - IIS</title>
    <link rel="stylesheet" href="/CSS/main.css" />
    <style>
      .admin-container {
        padding: 5rem 0;
        background: #f8f9fa;
        min-height: 100vh;
      }
      .admin-card {
        background: var(--White--);
        border-radius: 16px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
        padding: 2.5rem;
        max-width: 1300px;
        margin: 0 auto 3rem;
      }
      .admin-title {
        font-size: 2.2rem;
        margin-bottom: 1.5rem;
        color: var(--Primary-Color--);
        font-weight: 700;
        text-align: center;
      }
      .section-subtitle {
        text-align: center;
        color: #555;
        margin-bottom: 2rem;
        font-size: 1.1rem;
      }

      .registrations-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 1rem;
        margin-top: 1rem;
      }
      .registrations-table th {
        background: var(--Primary-Color--);
        color: var(--White--);
        padding: 1rem;
        text-align: left;
        font-weight: 600;
      }
      .registrations-table td {
        padding: 1rem;
        border-bottom: 1px solid #e9ecef;
        color: #444;
      }
      .registrations-table tr:hover {
        background: #f1f7ff;
      }

      .cover-letter {
        font-size: 0.9rem;
        color: #555;
        max-width: 280px;
        word-break: break-word;
      }
      .btn-download {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem 1rem;
        background: var(--Primary-Color--);
        color: white;
        border-radius: 50px;
        font-size: 0.9rem;
        font-weight: 600;
        text-decoration: none;
      }
      .btn-download:hover {
        background: #1a4fa8;
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(46, 102, 216, 0.3);
      }
      .btn-download::after {
        content: "Download";
      }

      .no-file {
        color: #999;
        font-style: italic;
      }
      .no-data {
        text-align: center;
        padding: 2.5rem;
        color: #666;
        font-size: 1.1rem;
      }

      .back-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        margin-top: 1.5rem;
        color: var(--Primary-Color--);
        font-weight: 600;
        text-decoration: none;
      }
      .back-link:hover {
        text-decoration: underline;
      }
      .back-link::before {
        content: "Back";
        font-size: 1.1rem;
      }

      @media (max-width: 992px) {
        .registrations-table {
          font-size: 0.9rem;
        }
        .registrations-table th,
        .registrations-table td {
          padding: 0.75rem;
        }
        .cover-letter {
          max-width: 180px;
        }
      }
      @media (max-width: 768px) {
        .admin-card {
          padding: 1.5rem;
        }
        .admin-title {
          font-size: 1.8rem;
        }
        .registrations-table {
          display: block;
          overflow-x: auto;
          white-space: nowrap;
        }
      }
    </style>
  </head>
  <body>
    <section class="admin-container">
      <div class="container">
        <!-- TEACHERS / STUDENTS REGISTRATIONS -->
        <div class="admin-card">
          <h1 class="admin-title">Teachers' registeration</h1>
          <p class="section-subtitle">Full registration with cover letter</p>

          <% if (registrations.length === 0) { %>
          <p class="no-data">No full registrations yet.</p>
          <% } else { %>
          <div style="overflow-x: auto">
            <table class="registrations-table">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Phone</th>
                  <th>Email</th>
                  <th>Cover Letter</th>
                  <th>Resume</th>
                  <th>Submitted</th>
                </tr>
              </thead>
              <tbody>
                <% registrations.forEach(reg => { %>
                <tr>
                  <td><%= reg.fullName %></td>
                  <td><%= reg.phone %></td>
                  <td><%= reg.email %></td>
                  <td class="cover-letter">
                    <%= reg.coverLetter.length > 120 ?
                    reg.coverLetter.slice(0,120)+'...' : reg.coverLetter %>
                  </td>
                  <td>
                    <% if (reg.resumeFileId) { %>
                    <a
                      href="/resume/<%= reg.resumeFileId %>"
                      class="btn-download"
                      target="_blank"
                    ></a>
                    <% } else { %>
                    <span class="no-file">—</span>
                    <% } %>
                  </td>
                  <td>
                    <%= new Date(reg.submittedAt).toLocaleString('en-US', {
                    month: 'short', day: 'numeric', hour: '2-digit', minute:
                    '2-digit' }) %>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
          <% } %>
        </div>

        <!-- CODEFILL REGISTRATIONS -->
        <div class="admin-card">
          <h1 class="admin-title">Students' registeration</h1>
          <p class="section-subtitle">Quick form with file upload</p>

          <% if (codefillEntries.length === 0) { %>
          <p class="no-data">No codefill entries yet.</p>
          <% } else { %>
          <div style="overflow-x: auto">
            <table class="registrations-table">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Phone</th>
                  <th>Email</th>
                  <th>File</th>
                  <th>Submitted</th>
                </tr>
              </thead>
              <tbody>
                <% codefillEntries.forEach(entry => { %>
                <tr>
                  <td><%= entry.fullName %></td>
                  <td><%= entry.phone %></td>
                  <td><%= entry.email %></td>
                  <td>
                    <% if (entry.fileId) { %>
                    <a
                      href="/codefile/<%= entry.fileId %>"
                      class="btn-download"
                      target="_blank"
                    ></a>
                    <% } else { %>
                    <span class="no-file">—</span>
                    <% } %>
                  </td>
                  <td>
                    <%= new Date(entry.submittedAt).toLocaleString('en-US', {
                    month: 'short', day: 'numeric', hour: '2-digit', minute:
                    '2-digit' }) %>
                  </td>
                </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
          <% } %>
        </div>
      </div>
    </section>
  </body>
</html>
